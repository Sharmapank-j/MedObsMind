# MedObsMind Environment Configuration
# Copy this file to .env and configure with your values

# ============================================================================
# APPLICATION
# ============================================================================
APP_NAME=MedObsMind
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# SERVER
# ============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL
DATABASE_URL=postgresql://medobsmind:changeme@localhost:5432/medobsmind
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# ============================================================================
# SECURITY
# ============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=change_this_to_a_random_secret_key_at_least_32_characters_long
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# GOOGLE OAUTH
# ============================================================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# ============================================================================
# ALLOWED HOSTS/ORIGINS
# ============================================================================
ALLOWED_HOSTS=localhost,127.0.0.1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# MODELS
# ============================================================================
# LLM Model Configuration
MODEL_PATH=/models/dsquaremedicalmodel-q4_k_m.gguf
MODEL_CONTEXT_LENGTH=8192
MODEL_THREADS=8
MODEL_GPU_LAYERS=0

# ============================================================================
# STORAGE
# ============================================================================
# MinIO / S3
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=medobsmind
MINIO_SECURE=false

# ============================================================================
# EMAIL (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@medobsmind.in

# ============================================================================
# MONITORING (Optional)
# ============================================================================
SENTRY_DSN=
PROMETHEUS_PORT=9090

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# FILE UPLOAD
# ============================================================================
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,docx

# ============================================================================
# FEATURES
# ============================================================================
ENABLE_REGISTRATION=true
ENABLE_AI_FEATURES=true
ENABLE_MULTIMODAL=true
ENABLE_TRAINING=false

# ============================================================================
# LOCALIZATION
# ============================================================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,bn,ta,te,mr,gu,kn,ml,pa,or,as,ur

# ============================================================================
# CORS
# ============================================================================
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*
