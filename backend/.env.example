# Backend environment variables template
# Copy this to .env and update with your values

# Application
ENVIRONMENT=development
DEBUG=True

# Security
SECRET_KEY=your-secret-key-change-this-in-production-use-strong-random-string

# Database
DATABASE_URL=postgresql+asyncpg://medobsmind:password@localhost:5432/medobsmind

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:19006

# Medical Safety
REQUIRE_DOCTOR_CONFIRMATION=true
AUDIT_LOG_ENABLED=true

# Alert Thresholds (NEWS2)
NEWS2_LOW_RISK_THRESHOLD=0
NEWS2_MEDIUM_RISK_THRESHOLD=5
NEWS2_HIGH_RISK_THRESHOLD=7
