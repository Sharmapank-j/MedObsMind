<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Camera Preview -->
    <TextureView
        android:id="@+id/cameraPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/controlPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status Overlay -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#AA000000"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="@string/video_interpreting"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:drawableLeft="@android:drawable/presence_video_online"
            android:drawablePadding="8dp" />
    </androidx.cardview.widget.CardView>

    <!-- AI Response Display -->
    <androidx.cardview.widget.CardView
        android:id="@+id/aiResponseCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="#CC000000"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toTopOf="@+id/controlPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/aiResponseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <!-- Control Panel -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:background="#AA000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Toggle Camera Button -->
        <Button
            android:id="@+id/toggleCameraButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:background="@android:drawable/ic_menu_camera"
            android:contentDescription="@string/toggle_camera" />

        <!-- Mute Button -->
        <Button
            android:id="@+id/muteButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:background="@android:drawable/ic_btn_speak_now"
            android:contentDescription="@string/toggle_mic" />

        <!-- End Call Button -->
        <Button
            android:id="@+id/endCallButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:text="@string/end_call"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF0000"
            style="@style/Widget.AppCompat.Button.Colored" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
