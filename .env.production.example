# Production Environment Variables
# Copy this file to .env and fill in your values

# Application
DEBUG=False
SECRET_KEY=change-this-to-a-random-secret-key-at-least-50-characters-long
ALLOWED_HOSTS=medobsmind.in,www.medobsmind.in,api.medobsmind.in

# Database
POSTGRES_USER=medobsmind
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_DB=medobsmind
DATABASE_URL=postgresql://medobsmind:change-this-secure-password@postgres:5432/medobsmind

# Redis
REDIS_PASSWORD=change-this-redis-password
REDIS_URL=redis://:change-this-redis-password@redis:6379/0

# AI Models
MODEL_PATH=/models/dsquaremedicalmodel-q4_k_m.gguf
MODEL_CACHE_DIR=/models/cache

# Google OAuth (Get from https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=INFO

# Security
CORS_ALLOWED_ORIGINS=https://medobsmind.in,https://www.medobsmind.in,https://api.medobsmind.in
CSRF_TRUSTED_ORIGINS=https://medobsmind.in,https://www.medobsmind.in,https://api.medobsmind.in

# Deployment
DEPLOYMENT_ENV=production
VERSION=1.0.0
